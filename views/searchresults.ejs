<h1 class="text-2xl font-semibold mb-6">Search Results</h1>

<div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
  <% jobs.forEach(job => { %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
      <div class="p-6">
        <div class="flex items-start justify-between">
          <h2 class="text-xl font-bold text-gray-900"><%= job.title %></h2>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
            <% if (job.type === 'Full Time') { %>
              bg-blue-100 text-blue-800
            <% } else { %>
              bg-green-100 text-green-800
            <% } %>">
            <%= job.type %>
          </span>
        </div>
        <p class="mt-2 font-medium text-gray-700"><%= job.company %></p>
        <p class="mt-1 text-sm text-gray-500"><%= job.location %></p>
        <p class="mt-3 text-gray-700"><%= job.description %></p>
        <div class="mt-4 flex items-center justify-between">
          <p class="text-sm font-medium text-gray-900">Salary: <%= job.salary %></p>
          <a href="<%= job.link %>" class="text-sm font-medium text-blue-600 hover:text-blue-500" target="_blank" rel="noopener noreferrer">Apply</a>
        </div>
      </div>
    </div>
  <% }); %>
</div>

<% if (jobs.length === 0) { %>
  <div class="text-center py-10">
    <p class="text-gray-500">No jobs found matching your search criteria.</p>
    <a href="/" class="mt-4 inline-block text-blue-600 hover:underline">Back to all jobs</a>
  </div>
<% } %>